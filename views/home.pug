extends partials/layout.pug

block content
    header 
        h1= title
        #if(message)
            p= message

    main
        section
            form(action="/user/login", method="post")
                div.field-group
                    label(for="username")
                        | Username: 
                        input#username(type="text", name="username", autocomplete="username", required)
                    p.
                        Usernames may only contain alphanumerics, hyphens, periods, and apostrophes.
                div.field-group
                    label(for="password")
                        | Password: 
                        input#password(type="password", name="password", autocomplete="password", required)
                input(type="submit", value="Login or Register")

    footer
        p
            | &copy; DistrictCon 2025
